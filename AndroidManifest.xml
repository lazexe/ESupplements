<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lsv.esupplements"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <permission-tree android:name="@string/app_name" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.lsv.esupplements.MainScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lsv.esupplements.EButtonsActivity"
            android:label="EButtonsActivity" >
        </activity>
        <activity
            android:name="com.lsv.esupplements.InformationActivity"
            android:label="InformationActivity" >
        </activity>
        <activity 
            android:name="com.lsv.esupplements.AboutActivity"
            android:label="AboutActivity">
        </activity>
    </application>

</manifest>